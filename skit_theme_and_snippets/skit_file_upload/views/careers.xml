<odoo>

	<template id="skit_website_assets" name="SKIT Website" inherit_id="web.assets_frontend">
		<xpath expr="//link[last()]" position="after">
			<link href="/skit_file_upload/static/src/scss/careers.scss" rel="stylesheet" type="text/less" />
		</xpath>
		<xpath expr="//script[last()]" position="after">
			<script type="text/javascript" src="/skit_file_upload/static/src/js/careers.js"></script>
			<script type="text/javascript" src="/skit_file_upload/static/src/js/menu.js"></script>
		</xpath>
	</template>

	<template id="careers_new">
		<t t-call="website.layout">
			<t t-set="title">Careers</t>
			<div class="oe_structure">

				<section class="sks_sectionContact section2"
					style="height: 50em;">
					<div class="container">
						<div class="row">
							<div class="sks-slide sks-sec1-contact-slide-div"
								data-background="#fff">
								<div class="inside sks-contact-inside">
									<p class="o_default_snippet_text sks-sec1-contact-p">Careers</p>
								</div>
							</div>
						</div>
					</div>
				</section>

				<section class="about_section1" style="height: 60em; background-color: #8f4ddf;">
					<div class="container sks_container">
						<div class="row">
							<div class="sks-slide sks-slide-div"
								data-background="#8f4ddf">
								<div class="inside sks-inside">

									<div class="sks-sec2-contact-div1">
										<div class="sks-sec2-contact-div2">
											<img class="sks-sec2-contact-img"
												src="/skit_file_upload/static/src/img/1_new.png" />
										</div>
										<div class="sks-sec2-contact-div3">
											<div class="text-container sks-sec2-contact-div4">
												<div class="title-container">
													<h2 class="sks-sec2-contact-h2">
														SEND YOUR RESUME
													</h2>
												</div>
												<div class="p1-container">
													<p class="sks-sec2-contact-p1">
														As Srikesh Infotech offers services like
														"Software
														Development", "Offshore Development" and "ERP
														Implementation", it requires quality human resources to
														enlarge these services worldwide.
														It believes in setting
														the right person for the right task
														with the right reward.
													</p>
												</div>
												 <form class="sks-career-form-design">
													<div class="p4-container">
														<div class="container">
															<div class="row it">
																<div id="one">
																	<div class="sks-carieer-form-flds">
																		<span class="sks-career-form-label">Hey, my name is</span>
																		<input style="width: 20em;"
																			class="sks-career-form sks-career-form-name" t-attf-ismandatorty="true"
																			type="text" name="name" placeholder="full name" />
																		<br></br>
																		<span class="sks-career-form-label">My Qualification is</span>
																		<input style="width: 19.3em;"
																			class="sks-career-form sks-career-form-qualification" t-attf-ismandatorty="true"
																			type="text" name="name" placeholder="qualification" />
																		<br></br>
																		<span class="sks-career-form-label">You can call me</span>
																		<input style="width: 20.3em;"
																			class="sks-career-form sks-career-form-phone" t-attf-ismandatorty="true"
																			type="text" name="name" placeholder="phone number" />
																		<br></br>
																		<span class="sks-career-form-label">You can reach me at</span>
																		<input style="width: 18.1em;"
																			class="sks-career-form sks-career-form-email" t-attf-ismandatorty="true"
																			type="text" name="name" placeholder="email" />
																		<br></br>
																		<span class="sks-career-form-label">Some more information</span>
	                                                                    <label for="field4">
	                                                                        <textarea style="width: 16.8em;" class="sks-career-form sks-career-form-about sks-form-style-4" name="field4" placeholder="about me" onkeyup="adjust_textarea(this)" required="true"/>
	                                                                    </label>
																	</div>
																	<div id="uploader">
																		<div class="row uploadDoc">
																			<div class="sks-form-upload-btn">
																				<div class="docErr">Please upload valid file</div>
																				<div class="fileUpload btn btn-next">
																					<i class="fa fa-upload"></i>
																					<span class="upl" id="upload">Upload</span>
																					<input type="file" class="upload up" id="file_upload"/>																				
																				</div>
																			</div>
																			<div class="sks-form-submit-btn submit">
																				<a id="launch" class="btn btn-next sks-career-submit sks_float_btn develop_launch">
																					<i class="fa fa-paper-plane"></i>
																					Submit
																				</a>
																				
																			</div>
																		</div>
																	</div>
																</div>
															</div>
														</div>
													</div>
												</form> 

												<div id="confirm">
													<div id="popup">
														<div class="popup_div">
															<canvas style="display: none" width="100"
																height="100"></canvas>
															<img id="confirm_gif_id" class="confirm_gif"
																alt="Contact us."
																src="/skit_file_upload/static/src/img/confirm.gif" />
															<span class="pop_span">Thank for registering we will contact
																you soon
															</span>
														</div>
													</div>
												</div>

											</div>
										</div>
									</div>

								</div>
							</div>
						</div>
					</div>
				</section>

				<script type="text/javascript">
				//auto expand textarea
					function adjust_textarea(h) {
					    h.style.height = "20px";
					    h.style.height = (h.scrollHeight)+"px";
					}
				</script>
			</div>
		</t>
	</template>
</odoo>  		