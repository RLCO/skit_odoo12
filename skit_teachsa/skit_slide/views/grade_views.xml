<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<!-- ELEARNING GRADE -->
        <record model="ir.ui.view" id="view_eleaning_grade_form">
            <field name="name">grade.form</field>
            <field name="model">grade</field>
            <field name="arch" type="xml">
                <form string="Grade">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="remark"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_eleaning_grade_tree" model="ir.ui.view">
            <field name="name">grade.tree</field>
            <field name="model">grade</field>
            <field name="arch" type="xml">
                <tree string="Grade">
                    <field name="name"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record id="action_ir_eleaning_grade" model="ir.actions.act_window">
            <field name="name">Grade</field>
            <field name="res_model">grade</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Grade
                </p>
            </field>
        </record>
        
    	<!-- GRADE MENU -->   
        <menuitem id="menu_eleaning_grades" parent="menu_website_elearning" name="Grade"  action="action_ir_eleaning_grade" sequence="20"/>
    </data>
</odoo>