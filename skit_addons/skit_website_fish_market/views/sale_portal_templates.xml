    <template id="shop_products_template" name="Shop Product" inherit_id="website_sale.products" priority="20">
    	<xpath expr="//div[@id='wrap']" position="before">
    		<t t-call="skit_website_fish_market.floaticon" />
    	</xpath>
    </template>
    
    <template id="floaticon">
		<aside id="floatsticky-social" class="float_cartimg_z_index">
			<ul>
				<li>
					<t t-set="website_sale_order" t-value="website.sale_get_order()" />
					<a href="/shop/cart" class="event_tooltip">
					 <img src="/skit_website_fish_market/static/src/img/cart_image.png" style="width:100%;"/>
					 <sup id="float_new_web_cart_quantity" t-attf-class="my_cart_quantity badge badge-primary shopcartfloat"
								t-esc="website_sale_order and website_sale_order.cart_quantity or ''" />
					</a>
				</li>
			</ul>
		</aside>
	</template>
    
    <template id="sale_order_portal_status_test" name="Sales Order Portal Content" inherit_id="sale.sale_order_portal_template" priority="20">
   		<xpath expr="//div[hasclass('alert-warning')]" position="before">
        	<span class="track-span"> Track Order </span>
        	<section class="ps-timeline-sec">
        <div class="container">
            <ol class="ps-timeline">
            	<t t-if="(sale_order.state == 'draft') or (sale_order.state == 'sent')">
            		<li id="sale_confirm" class="border-gray">
	                    <div class="ps-bot">
	                        <p>Confirmed</p>
	                    </div>
	                    <span class="ps-sp-top border-gray-span"><img id="sale_confirm_img" src="/skit_website_fish_market/static/src/img/confirmed_gray.png" alt=""/></span>
	                </li>
            	</t>
            	<t t-else="">
            		<li id="sale_confirm" class="border-green">
	                    <div class="ps-bot">
	                        <p>Confirmed</p>
	                    </div>
	                   <span class="ps-sp-top border-green-span"><img id="sale_confirm_img" src="/skit_website_fish_market/static/src/img/confirmed_green.png" alt=""/></span>
	                </li>
            	</t>
                <t t-if="(sale_order.state == 'draft') or (sale_order.state == 'sent') or (sale_order.state == 'sale')">
                	<li id="sale_preparing" class="border-gray">
	                     <div class="ps-bot">
	                        <p>Preparing</p>
	                    </div>
	                    <span class="ps-sp-bot border-gray-span"><img id="sale_preparing_img" src="/skit_website_fish_market/static/src/img/preparing_gray.png" alt=""/></span>
	                </li>
                </t>
                <t t-else="">
                	<li id="sale_preparing" class="border-green">
	                     <div class="ps-bot">
	                        <p>Preparing</p>
	                    </div>
	                    <span class="ps-sp-bot border-green-span"><img id="sale_preparing_img" src="/skit_website_fish_market/static/src/img/preparing_green.png" alt=""/></span>
	                </li>
                </t>
                <t t-if="(sale_order.state == 'draft') or (sale_order.state == 'sent') or (sale_order.state == 'sale') or (sale_order.state == 'preparing')">
                	<li id="sale_ready" class="border-gray">
	                     <div class="ps-bot">
	                        <p>Ready to Delivery</p>
	                    </div>
	                    <span class="ps-sp-top border-gray-span"><img id="sale_ready_img" src="/skit_website_fish_market/static/src/img/ready.png" alt=""/></span>
	                </li>
                </t>
                <t t-else="">
                	<li id="sale_ready" class="border-green">
	                     <div class="ps-bot">
	                        <p>Ready to Delivery</p>
	                    </div>
	                    <span class="ps-sp-top border-green-span"><img id="sale_ready_img" src="/skit_website_fish_market/static/src/img/ready_green.png" alt=""/></span>
	                </li>
                </t>
                 <t t-if="(sale_order.state == 'draft') or (sale_order.state == 'sent') or (sale_order.state == 'sale') or (sale_order.state == 'preparing') or (sale_order.state == 'ready')">
                 	<li id="sale_delivered" class="border-gray">
	                     <div class="ps-bot">
	                        <p>Delivered</p>
	                    </div>
	                    <span class="ps-sp-bot border-gray-span"><img id="sale_delivered_img" src="/skit_website_fish_market/static/src/img/delivered_gray.png" alt=""/></span>
	                </li>
                 </t>
                 <t t-else="">
                 	<li id="sale_delivered" class="border-green">
	                     <div class="ps-bot">
	                        <p>Delivered</p>
	                    </div>
	                    <span class="ps-sp-bot border-green-span"><img id="sale_delivered_img" src="/skit_website_fish_market/static/src/img/delivered_green.png" alt=""/></span>
	                </li>
                 </t>
                
            </ol>
        </div>
    </section>
