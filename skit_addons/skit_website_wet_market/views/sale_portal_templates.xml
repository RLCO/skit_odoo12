			      <th><input type="checkbox" id="all_products" /></th>
			      <th><button type="button" class="sort" data-sort="sortName">Name<i class="caret"></i></button></th>
			      <th><button type="button" class="sort" data-sort="sortPrice">Price<i class="caret"></i></button></th>
