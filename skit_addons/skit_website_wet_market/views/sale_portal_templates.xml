		    	<t t-foreach="products" t-as="product">
		        	<tr t-att-id="product.id">
			        	<td><input type="checkbox" class="product_row" /> </td>
			            <td class="sortName"><t t-esc="product.name"/></td>
			            <td class="sortPrice">
			            	<input type="text" class="form-control" id="product_price" t-att-value="product.website_price" />
			            </td>
			            <td>
			            	<select class="form-control grid_attribute" id="grid_attribute" name="attribute">
								<option disabled="1" selected="1" value="">Choose...</option>
								<t t-foreach='product_attribute' t-as='attr'>
									<t t-set="att_select" t-value="False" />
									<t t-foreach='product.attribute_line_ids' t-as='att_line'>
										<t t-if="(attr.id) == att_line.attribute_id.id" >
											<t t-set="att_select" t-value="True" />
										     <option selected="selected" t-att-value='attr.id'><t t-esc='attr.name'/></option>
										</t>
									</t>
									<t t-if="not (att_select)">
										<option t-att-value='attr.id'><t t-esc='attr.name'/></option>
									</t>
								</t>
							</select>
			            </td>
			            <td>
			            	<select class="form-control grid_attribute_value chosen" id="grid_attribute_value" name="attribute_value" multiple="true">
								<t t-foreach='attribute_values' t-as='value'>
									<t t-set="att_select" t-value="False" />
									<t t-foreach='product.attribute_line_ids' t-as='att_line'>
										<t t-foreach='att_line.value_ids' t-as='value_id'>
										<t t-if="(value.id) == value_id.id" >
											<option selected="selected" t-att-value='value.id'><t t-esc='value.name'/></option>
										</t>
										</t>
									</t>
									<t t-if="not (att_select)">
										<option t-att-value='value.id'><t t-esc='value.name'/></option>
									</t>
								</t>
							</select>
			            </td>
			            <td>
				            <t t-if="product.type != 'product'">
				            	<input type="number" class="form-control" id="onhand_qty" name="onhand_qty" disabled="disabled"/>
				            </t>
				            <t t-else="">
				            	<input type="number" class="form-control" id="onhand_qty" name="onhand_qty" />
