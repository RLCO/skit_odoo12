<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">   
 
	    <t t-name="StepDiscountButton"> 
	    	<div class="step_discount_button"> 	
		        <div class='control-button'>
		        	Step Discount
		        </div>
		    </div> 
	    </t> 
    
	    <t t-name="StepDiscountButtonPopupWidget">
	        <div class="modal-dialog clientlist-screen">
	            <div class="popup popup-text" style="width:560px;">  
	            	<p class="title" style="background:#6EC89B;"><t t-esc=" widget.options.title || '' "/></p>          
	            		<div class='packlot-lines'>
	            			<table class='client-list' id="additional_discounts" style="line-height:60px;background: #e6e6e6">                	
		                		<tbody>
		                			<tr>
			                			<td>
									       <t>
										      Discount 1:
										   </t>
								        </td>
								    	<td>
								            <div name="step_discount_dropdown">
								            	<select name='step_discount' id="select1" class="step_discount_input">
							                        <option value=''></option>
							                        <t t-if='widget.pos.step_discount.length > 0'>
								                        <t t-foreach='widget.pos.step_discount' t-as='step_discount'>
									                       <option t-att-value='widget.pos.step_discount'> 
										                          <t t-esc='step_discount.name'/>										                                									                                    
									                       </option>
									                       							                                	
								                         </t>
							                        </t>	                            
							                	</select>
						                	</div>
								        </td>
		                			</tr>
		                			<tr style="background: #e6e6e6">
					                	<td>
									        <t>
										        Discount 2:
										    </t>
									    </td>
								        <td>
								            <div name="step_discount_dropdown">
								            	<select name='step_discount' id="select2" class="step_discount_input">
		
							                         <option value=''></option>
							                         <t t-if='widget.pos.step_discount.length > 0'>
								                          <t t-foreach='widget.pos.step_discount' t-as='step_discount'>
									                           <option t-att-value='widget.pos.step_discount'> 
										                           <t t-esc='step_discount.name'/>										                                									                                    
									                           </option>							                                	
								                          </t>
							                          </t>	                          
							                	</select>
						                	</div>
								        </td>
			                	    </tr>
			                		<tr>
				                		<td>
								        	<t>
									           Discount 3:
									        </t>
								        </td>
								        <td>
								        	<div name="step_discount_dropdown">
								            	<select name='step_discount' id="select3" class="step_discount_input">
							                         <option value=''></option>
							                         <t t-if='widget.pos.step_discount.length > 0'>
								                          <t t-foreach='widget.pos.step_discount' t-as='step_discount'>
									                           <option t-att-value='widget.pos.step_discount'> 
										                            <t t-esc='step_discount.name'/>										                                									                                    
									                           </option>							                                	
								                          </t>
							                          </t>	                            
							                	</select>
						                 	</div>
								         </td>
								         <td>
								         	<div class="add_discounts" id="add_discounts">
									            <span class="order-button square neworder-button">
									                <i class='fa fa-plus' id="fa-plus"/>
									            </span>	
								            </div>					           
								    	</td>
			                		</tr>			                				                				                		 
			                	</tbody> 		                
		                	</table>
	                 	</div>                            
	                 	<div class="footer">
	                		<div class="button confirm">
	                        	Ok
	                    	</div>
	                    	<div class="button cancel">
	                        	Cancel 
	                    	</div>
	                	</div>
	           </div>
	        </div>
	   	</t>
	  
</templates>