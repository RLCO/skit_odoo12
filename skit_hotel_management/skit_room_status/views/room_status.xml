    <record id="skit_product_history_view" model="ir.ui.view">
        <field name="name">product.product.history</field>
        <field name="model">product.history</field>
        <field name="arch" type="xml">
        <form string="History">
        
        <field name ="product_id"></field>
        <field name ="order_id"></field>
        <field name ="status"></field>
        </form>
        </field>
        </record>
        
       <record id="skit_product_template_form_view" model="ir.ui.view">
        <field name="name">product.history.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"></field>
        <field name="arch" type="xml">
        
         <xpath expr="//page[@name='sales']" position="after">
           <page  string="History"  name="history">
           <field name="product_history_lines" colspan="4" nolabel="1">
                            <tree string="Product History" editable="bottom">
                                <field name="product_id"/>
                                <field name="product_tmpl_id"/>
                                <field name="status"/>
                                <field name="date" />
                                <field name="created_by"/>
                               
                            </tree>
                            <form string="Product History">
                                <group col="4">
                                    <field name="product_id"/>
                                <field name="product_tmpl_id"/>
                                <field name="status"/>
                                <field name="date" />
                                <field name="created_by"/>
                                </group>
                            </form>
                        </field>
           </page>
            </xpath>
            </field>
         </record> 
        
